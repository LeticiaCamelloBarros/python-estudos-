# enunciado da questão no comentário do commit 

nomes = {}
idades = {}
qntd = int(input("quantos nomes você deseja cadastrar ? "))
for i in range(qntd):
    print(f"informações pessoa {i+1}")
    nome = input("qual o seu nome ")
    idade = int(input("qual a sua idade ? "))
    nomes[f"pessoa{i+1}"] = nome
    idades[f"pessoa{i+1}"] = idade

maior_idade = 0
menor_idade = 9999999999999999999999999999999999999999999999999999999999999999999
mais_velha = None
mais_nova = None
for key, value in idades.items():
    if value < menor_idade:
        menor_idade = value
        pessoa_menor = key
        # a variável pessoa menor vai armazenar a chave que vai dar acesso ao nome da pessoa com a menor idade

    if value > maior_idade:
        maior_idade = value
        pessoa_maior = key
        # a variável pessoa maior vai armazenar(em pessoa1, pessoa2...) a chave que vai dar acesso ao nome da pessoa com a maior idade

for key, value in nomes.items():
    if key == pessoa_menor:
        mais_nova = value

    if key == pessoa_maior:
        mais_velha = value

print(f"a pessoa com menor idade é : {mais_nova}")
print(f"a pessoa com maior idade é : {mais_velha}")
