# enunciado da questão no comentário do primeiro commit
N = int(input())
list_tree = []
for i in range(1, N+1):
    if i % 2 == 0:
        pass
    else:
        N_espaco = (N-i) // 2
        espaco = " "*N_espaco
        da_vez = (f"{espaco}{"*"*i}{espaco}")
        list_tree.append(da_vez)
for part in list_tree:
    print(part)

quant_espacosl = (N // 2)-1
print(" "*quant_espacosl, "*", " "*quant_espacosl)
quant_espacosl = (N//2) - 2
print(" "*quant_espacosl, "***", " "*quant_espacosl)
